<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="budgegeria_datetime.timezone_prototype" class="DateTimeZone" scope="prototype">
            <argument>%budgegeria_datetime.timezone%</argument>
        </service>
        
        <service id="budgegeria_datetime.timezone_global" class="DateTimeZone">
            <argument>%budgegeria_datetime.timezone%</argument>
        </service>
        
        <service id="budgegeria_datetime.timezone" alias="budgegeria_datetime.timezone_global" />
    </services>
</container>
